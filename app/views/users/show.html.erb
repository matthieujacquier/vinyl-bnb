<div class="row justify-content-center">
  <div class="col-10 ">
  <h1 class="mt-5 mb-4 ms-4">List of my vinyls</h1>

  <% if @listings.any? { |listing| listing.active? } %>
    <div class="card-container">
        <% @listings.each do |listing| %>
          <% if listing.active? %>
            <div class="card-product">
              <% if listing.photo.attached? %>
              <%= cl_image_tag listing.photo.key %>
              <% end %>
              <div class="card-product-infos">
            <h2><%= listing.album_name %></h2>
            <p><i class="fa-solid fa-podcast"></i>  <%= listing.artist_name %></p>
            <p><i class="fa-solid fa-tag"></i> <%= listing.genre %></p>
            <p class="mb-4"><%= listing.price_per_day %> â‚¬ / per day</p>
            <%= link_to "See vinyls details", listing_path(listing), class:"button"%>
          </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <p>You have no active vinyl listings.</p>
  <% end %>
</div>
</div>
</div>
