<div class="container my-4">
  <div class="mb-5">
    <h1>This is your about me page</h1>
    <ul class="list-unstyled">
      <li><strong>First Name:</strong> <%= @user.first_name %></li>
      <li><strong>Last Name:</strong> <%= @user.last_name %></li>
      <li><strong>City:</strong> <%= @user.city %></li>
      <li><strong>Bio:</strong> <%= @user.bio.presence || "No bio added yet." %></li>
    </ul>

    <div class="mt-3">
      <% if @user.bio.blank? %>
        <%= link_to "Add a bio", edit_about_me_path, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "Edit my bio", edit_about_me_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>

  <div>
    <h1>List of all vinyls</h1>

    <% if @listings.any? { |listing| listing.active? } %>
      <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <% @listings.each do |listing| %>
          <% if listing.active? %>
            <div class="col">
              <div class="card h-100">
                <% if listing.photo.attached? %>
                  <%= cl_image_tag listing.photo.key, class: "card-img-top", alt: listing.album_name %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= listing.album_name %></h5>
                  <p class="card-text">
                    <strong>Artist:</strong> <%= listing.artist_name %><br>
                    <strong>Genre:</strong> <%= listing.genre %><br>
                    <strong>Price:</strong> <%= number_to_currency(listing.price_per_day, unit: "â‚¬") %>
                  </p>
                  <%= link_to "See details", listing_path(listing), class: "btn btn-outline-primary btn-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="mt-3">You have no active vinyl listings.</p>
    <% end %>
  </div>
</div>
