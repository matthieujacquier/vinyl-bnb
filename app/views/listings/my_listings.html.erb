<div class="container-fluid full-height">
  <div class="row d-flex justify-content-center">
    <div class="col-8 justify-content-start">
      <h1>My listings</h1>
      <div class="card-container">
        <% @listings.each do |listing| %>
        <div class="card-product">
          <% if listing.photo.attached? %>
          <%= cl_image_tag listing.photo.key %>
          <% end %>
          <div class="card-product-infos">
            <h2><%= listing.album_name %></h2>
            <p>Artist: <%= listing.artist_name %></p>
            <p>Genre: <%= listing.genre %></p>
            <p>Price/day <%= listing.price_per_day %>0â‚¬</p>
            <% if listing.active == true %>
              <p>Listing is activated</p>
            <% else %>
              <p>Listing is deactivated</p>
            <% end %>
            <%= link_to "See vinyls details", listing_path(listing) %>
          </div>
        </div>
        <% end %>
        </div>
      </ul>

    </div>
  </div>
</div>
